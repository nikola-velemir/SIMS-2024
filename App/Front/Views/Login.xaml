<Window x:Class="App.Front.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App.Front.Views"
        mc:Ignorable="d"
        Title="Login" Height="168" Width="558">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Korisnicko Ime:" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10"/>
        <TextBox Text="{Binding ViewModel.Nalog.UserName, Mode=TwoWay}" Name="KorisnickoImeTextBox" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10"/>

        <Label Content="Lozinka:" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10"/>
        <PasswordBox Name="LozinkaPasswordBox" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10"/>

        <TextBlock Text="{Binding ViewModel.Error, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>


        <Button Content="Login" Grid.Row="3" Grid.Column="1" Margin="0,10,0,10" HorizontalAlignment="Center" Click="LoginClick" Width="41"/>
    </Grid>
</Window>
